<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <div class="container mt-4">
       <h1><%= blog.title %></h1>
       <img src="/<%= blog.coverImageUrl %>" class="img-fluid" >
       <p><%= blog.content %></p>
    </div>

    <div class="container mt-4 d-flex align-items-center">
        <img src="<%= blog.createdby.profileimageurl %>" class="img-fluid rounded-circle me-2" style="max-width: 100px; height: auto;"> 
        <b><%= blog.createdby.fullName %></b>
    </div>

    <div class="container mt-3">
    <u><h2>Comments</u> (<%= comment.length %>)</h2>
    <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
             <div class="mb-3">
                 <input type="text" class="form-control" name="content" >
             </div>
             <div class="mb-3">
                 <button class="btn btn-primary" type="submit">Post</button>
             </div>
         </form>  
    <% } %>
      
    <div class="container mt-3">
       <% comment.forEach(com => { %>
        <img src="<%= com.createdby.profileimageurl %>" class="img-fluid rounded-circle me-2" style="max-width: 60px; height: auto;"> <%= com.createdby.fullName %>
        <p><%= com.content %></p>

       <% }) %>
    </div>

     </div> 
  

    <%- include('./partials/scripts.ejs') %>
</body>
</html>